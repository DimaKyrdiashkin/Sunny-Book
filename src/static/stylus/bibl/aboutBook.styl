.aboutBook
  background #8973DB
  display flex
  flex-direction column
  align-items center

  & .container
    & h2
      color #fff

  & .bigContainer
    max-width 1500px
    background #fff
    padding 0 130px
    margin-top 50px

    &_item
      display flex
      justify-content space-between

      &:first-child
        & ul
        & h4
          padding-top 70px

      &>h4
        color #8973DB
        font-weight 500
        width 30%
        margin-right 50px

      & ul
        width 70%
        display flex
        flex-direction column
        gap 45px
        border-left 1px solid #B3A5E9
        padding 0 0 75px 50px

        &>li
          margin-left 20px
          position relative

          &::before
            content ''
            display block
            width 10px
            height 1px
            background #222
            position absolute
            left -10px
            top 11px
            transform translateX(-100%)