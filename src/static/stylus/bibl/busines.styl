.busines
  background url('./../img/Busines/Background.jpg') center no-repeat
  background-size cover
  padding 100px 0

  & .container
    &>p
      text-align center
      max-width 750px
      display flex
      margin 32px auto 0

  &_box
    display flex
    justify-content space-between
    margin-top 80px

    &__items
      width calc(25% - 0px)
      margin-right 65px
      display flex
      flex-direction column
      justify-content space-between
      position relative
      padding-bottom 24px
      color #645E9D

      &:last-child
        margin-right 0

      &::before
        content ''
        display block
        position absolute
        width 100%
        height 4px
        background linear-gradient(90deg, #645E9D -0.21%, #9E7AC1 100%)
        border-radius 4px
        bottom 0
        left 0

      &>h4
        margin-bottom 20px
        color #645E9D
        width 100%


@media all and (max-width 1440px)
  .busines
    padding 100px 68px 0

@media all and (max-width 1280px)
  .busines
    &_box
      flex-wrap wrap
      justify-content center
      padding 0 10%

      &__items
        width calc(50% - 50px)
        margin-right 100px
        margin-bottom 100px

        &:nth-child(2n)
          margin-right 0

@media all and (max-width 768px)
  .busines
    padding 92px 28px 0

    &_box
      padding 0 5%

      &__items
        &>h4
          font-size 30px
          
        & .subP
          font-size 14px

@media all and (max-width 560px)
  .busines
    &_box
      flex-direction column

      &__items
        width 100%
        margin-right 0
        margin-bottom 40px