.sunnyBook
  display flex
  flex-direction column
  padding-bottom 0 !important
  background #fff

  & h2
    color #8973DB

  &_top
    display flex
    justify-content space-between
    flex-wrap wrap
    margin-top 50px
    margin-bottom 110px

    &>p
      &:nth-child(1)
        max-width 400px
        width 100%
        margin-right 20px

      &:nth-child(2)
        max-width 715px
        width 100%

  &_bottom
    display flex
    background linear-gradient(180deg, rgba(244, 244, 244, 0.1) 0%, #F4F4F4 100%)

    & .container
      display flex
      align-items center

    &__left
      display flex
      flex-direction column
      max-width 550px
      margin-right 80px

      &>img
        align-self flex-start
        margin-top 90px

      & .quote
        margin 50px 0
        color #222

      & .author
        font-style normal
        color #8973DB
        text-align right


    &__right
      width 40%
      display flex

      & img
        width 100%
        object-fit contain
        height intrinsic
         
@media all and (max-width 1280px)
  .sunnyBook
    &_bottom
      &__left
        & .author
          text-align left

    &_top
      &>p
        &:nth-child(1)
          margin-bottom 20px


@media all and (max-width 1024px)
  .sunnyBook
    &_top
      margin-top 30px
      margin-bottom 95px

    &_bottom
      &__left
        margin-bottom  200px

        &>img
          width 10%
          margin-top 45px

        & .quote
          margin 45px 0 30px

      &__right
        position absolute
        right 0
        bottom 0

@media all and (max-width 768px)
  .sunnyBook
    &_bottom
      &__left
        & .quote
          width 90%

@media all and (max-width 560px)
  .sunnyBook
    & .container
      flex-direction column

    &_top
      margin-top 20px
      margin-bottom 60px
    
    &_bottom
      &__left
        margin-right 0
        margin-bottom 30px

        &>img
          margin-top 20px

        & .quote
          font-size 16px
          margin 25px 0 20px
        
        & .author
          font-size 16px

      &__right
        position unset
        width 70%