.promo
  width 100%
  background #8973DB
  color #fff
  display flex
  flex-direction column
  justify-content center
  position relative

  & .abstractionR
    position absolute
    width 22%
    right 0
    bottom 15%

  & .abstractionL
    position absolute
    width 28%
    left 0
    bottom 0

  & .container
    display flex
    align-items center

    & img
    & model-viewer
      height 95vh
      width 50vw
      --poster-color #8973DB
  
  &_slider
    position relative
    width 100%
    height 80vh
    max-height 500px
    border-top 1px solid #F1F1F1
    box-shadow 0px 15px 40px rgba(0, 0, 0, 0.04)
    overflow hidden

    & .people
      position absolute
      right 15%
      bottom 0
      height 85%

    & .abstraction
      position absolute
      z-index -1
      right 0
      bottom 0
      height 90%

@keyframes paintingSvg
  0%
    fill #5C5C5C
  25%
    fill #fff
  75%
    fill #5C5C5C
  100%
    fill #5C5C5C

@keyframes paingSvgWrap
  0%
    background transparent
  25%
    background #66B700
  75%
    background transparent
  100%
    background transparent

@media all and (max-width 1024px)
  .promo
    & .container
      flex-direction column

      &>img
      & model-viewer
        width 80vw
        height 70vh

    & .abstractionR
      bottom unset
      top 25%

@media all and (max-width 768px)
  .promo
    & .container
      & img
      & model-viewer
        max-height 500px

@media all and (max-width 560px)
  h1
    font-size 24px
    margin-left 0

  .promo
    & .container
      & img
        max-height 300px

    & .abstractionR
      display none

    & .abstractionL
      width 80%