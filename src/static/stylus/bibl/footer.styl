footer
  width 100%
  background #8973DB
  padding 30px 0

  & .container
    display flex
    justify-content space-between
    align-items center

  & .menu
    display flex

    & li
      display flex
      align-items center
      margin-right 45px

      &:last-child
        margin-right 0

      & a
        padding 15px
        border-radius 10px
        font-weight bold
        border 1px solid transparent
        transition .3s

        &:hover
          border 1px solid #fff
          transition .3s

  & .link
    display flex
    
    &>li
      &:first-child
        margin-right 20px

@media all and (max-width 560px)
  footer
    & .link
      margin 0 auto