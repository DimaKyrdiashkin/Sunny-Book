.modal
  position fixed
  z-index -1
  opacity 0
  transition .2s
  top 0
  width 100%
  height 100vh
  background rgba(0, 0, 0, 0.2)

  &_box
    position absolute
    top 50%
    transform translateY(-50%)
    background #fff
    padding 80px 0 40px
    width 100%

    &__head
      display flex
      justify-content space-between

      & h4
        max-width 100%
        color #0F0F0F
        text-align left
        font-weight 300
        margin 0 20px 0 0
        max-width 760px

      &>img
        cursor pointer
        height fit-content

    &__content
      margin-top 76px
      display flex
      flex-wrap wrap

      & .distibutor
        width 50%
        padding-bottom 12px
        margin-bottom 40px
        border-bottom 1px solid #F1F1F1

        &:last-child
          border-bottom 0

        &Phone
          font-weight 100

          &>a
            color inherit

        &Name
          color #0F0F0F
          margin-bottom 8px

      & .empty
        width 100%
        margin-bottom 40px

        &>p
          color #0F0F0F
          font-weight 300

        &Region
          font-weight 100
          margin-top 24px
          padding 13px 20px
          background #F9F9F9
          border-radius 4px
          max-width 680px
          
          &>a
            color #5C5C5C